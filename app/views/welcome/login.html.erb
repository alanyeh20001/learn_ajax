<div class="reveal-modal custom-modal" id="login" data-reveal data-close-on-click="true" data-animation-in="fade-in" data-animation-out="fade-out">
  <h2>可以用ajax登入啦！</h2>
  <div class="alert_info"></div>
  <%= simple_form_for Member.new, as: :member, url: member_session_path, html: { id: "login_form" }, remote: true, format: :json do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <div class="form-actions">
      <%= f.button :submit, "登入" %>
      <a href="#" id="forget-password-link" >忘記密碼？</a>
    </div>
  <% end %>

  <button class="close-button" data-close aria-label="Close reveal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>