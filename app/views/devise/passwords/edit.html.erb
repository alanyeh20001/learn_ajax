<div id="reset_password">
  <h2>修改密碼！</h2>
  <div class="alert_info"></div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :put, html: { id: "reset_password_form" }, remote: true, format: :json) do |f| %>

    <%= f.input :reset_password_token, as: :hidden %>

    <div class="field">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.input :password, autofocus: true, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.input :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password" %>
    </div>
  <% end %>
</div>